{
  "name": "solist",
  "version": "0.0.1",
  "description": "* compile with https://github.com/ethereum/solc-js * run with https://github.com/ethereumjs/ethereumjs-vm * run flows with jest",
  "main": "index.js",
  "scripts": {
    "testrpc": "better-npm-run testrpc",
    "start": "TESTRPC_URL=http://localhost:8545 jest --notify --watch",
    "format": "prettier --trailing-comma es5 --parser typescript --single-quote true --print-width 100 ./engine/**/*.ts ./engine/**/*.ts --write"
  },
  "betterScripts": {
    "testrpc": "testrpc -m \"$TESTRPC_MNEMONIC\""
  },
  "author": "",
  "license": "ISC",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "parser": "typescript"
  },
  "dependencies": {
    "async": "^2.5.0",
    "bignumber.js": "^4.0.2",
    "callsite": "^1.0.0",
    "ethereumjs-testrpc": "^4.0.1",
    "glob": "^7.1.2",
    "jest": "^20.0.4",
    "jest-jasmine2": "^20.0.4",
    "loader-utils": "^1.1.0",
    "memorystream": "^0.3.1",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "solc": "^0.4.13",
    "typescript": "^2.4.2",
    "web3": "^0.19.1"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node",
      "sol"
    ],
    "transform": {
      "^.+\\.(ts)$": "<rootDir>/tooling/ts-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.[tj]s",
      "**/?(*.)(spec|test).[tj]s"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/bignumber.js": "^4.0.2",
    "@types/callsite": "^1.0.30",
    "@types/jest": "^20.0.5",
    "@types/memory-fs": "^0.3.0",
    "@types/node": "^8.0.17",
    "@types/webpack": "^3.0.5",
    "better-npm-run": "0.0.15",
    "memory-fs": "^0.4.1",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.3",
    "regenerator-runtime": "^0.10.5",
    "ts-jest": "^20.0.7"
  }
}
