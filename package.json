{
  "name": "solist",
  "version": "1.0.0",
  "description": "* compile with https://github.com/ethereum/solc-js * run with https://github.com/ethereumjs/ethereumjs-vm * run flows with jest",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all -p start:*",
    "start:compile": "tsc --outDir dist --watch",
    "start:testrpc": "testrpc > testrpc.log",
    "start:run": "TESTRPC_URL=http://localhost:8545 nodemon -w ./dist -w ./test -e js,sol -x \"jest --notify\"",
    "format": "prettier --trailing-comma es5 --parser typescript --single-quote true --print-width 100 ./engine/**/*.ts ./engine/**/*.ts --write"
  },
  "author": "",
  "license": "ISC",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "parser": "typescript"
  },
  "dependencies": {
    "async": "^2.5.0",
    "bignumber.js": "^4.0.2",
    "ethereumjs-testrpc": "^4.0.1",
    "glob": "^7.1.2",
    "jest": "^20.0.4",
    "jest-jasmine2": "^20.0.4",
    "memorystream": "^0.3.1",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "solc": "^0.4.13",
    "ts-node": "^3.2.0",
    "typescript": "^2.4.1",
    "web3": "^0.19.1"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node",
      "sol"
    ],
    "transform": {
      "^.+\\.sol?$": "<rootDir>/dist/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ]
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/bignumber.js": "^4.0.2",
    "@types/jest": "^20.0.2",
    "@types/node": "^8.0.10",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.2",
    "regenerator-runtime": "^0.10.5",
    "ts-jest": "^20.0.7"
  }
}
