{
  "name": "@dcntrlzd/helios",
  "version": "0.1.0-beta.4",
  "description": "* compile with https://github.com/ethereum/solc-js * run with https://github.com/ethereumjs/ethereumjs-vm * run flows with jest",
  "main": "index.js",
  "scripts": {
    "ts": "npx tsc --noEmit --watch",
    "lint": "tslint -p . -e src/external-declarations/**/* --fix",
    "build": "npm-run-all -s build:cleanup build:compile",
    "build:cleanup": "rm -rf build",
    "build:compile": "tsc --outDir build",
    "testrpc": "better-npm-run testrpc",
    "start:jest": "ETHEREUM_NODE_SNAPSHOT=true ETHEREUM_NODE_URL=http://localhost:8545 jest -i --notify --watch",
    "start:testrpc": "better-npm-run testrpc > testrpc.log ",
    "start": "npm-run-all -p start:*",
    "pack:clean": "rm *.js *.d.ts; echo",
    "pack:move": "mv build/* .",
    "prepack": "npm-run-all -s pack:clean build:cleanup build:compile pack:move",
    "postpack": "npm-run-all -s pack:clean build:cleanup"
  },
  "files": [
    "compiler.js",
    "compiler.d.ts",
    "session.js",
    "session.d.ts",
    "loader.js",
    "loader.d.ts"
  ],
  "betterScripts": {
    "testrpc": "ganache-cli -m \"$TESTRPC_MNEMONIC\""
  },
  "author": "Baris Gumustas <barisgumustas@gmail.com>",
  "license": "SEE LICENSE IN LICENSE.md",
  "dependencies": {
    "@types/bignumber.js": "^4.0.3",
    "@types/callsite": "^1.0.30",
    "@types/glob": "^5.0.35",
    "@types/jest": "^21.1.10",
    "@types/memory-fs": "^0.3.0",
    "@types/node": "^8.5.9",
    "@types/webpack": "^3.8.4",
    "bignumber.js": "^4.1.0",
    "callsite": "^1.0.0",
    "glob": "^7.1.2",
    "loader-utils": "^1.1.0",
    "mkdirp": "^0.5.1",
    "solc": "^0.4.19",
    "web3": "1.0.0-beta.29"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts",
      "node",
      "json",
      "sol"
    ],
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[tj]s",
      "**/?(*.)(spec|test).[tj]s"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/prepare.js",
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/testrpc.log",
      "<rootDir>/test/state.json"
    ]
  },
  "devDependencies": {
    "better-npm-run": "^0.1.0",
    "ethereumjs-testrpc": "^6.0.3",
    "ganache-cli": "^6.0.3",
    "ganache-core": "^2.0.2",
    "jest": "^22.1.4",
    "memory-fs": "^0.4.1",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "regenerator-runtime": "^0.10.5",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dcntrlzd/helios.git"
  },
  "keywords": [
    "ethereum",
    "dapp"
  ],
  "bugs": {
    "url": "https://github.com/dcntrlzd/helios/issues"
  },
  "homepage": "https://github.com/dcntrlzd/helios#readme"
}
