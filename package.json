{
  "name": "helios",
  "version": "0.0.1",
  "description": "* compile with https://github.com/ethereum/solc-js * run with https://github.com/ethereumjs/ethereumjs-vm * run flows with jest",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -p . --fix",
    "build": "npm-run-all -s build:prepare build:compile",
    "build:prepare": "rm -rf build",
    "build:compile": "tsc --outDir build",
    "testrpc": "better-npm-run testrpc",
    "start": "TESTRPC_URL=http://localhost:8545 jest --notify --watch"
  },
  "betterScripts": {
    "testrpc": "testrpc -m \"$TESTRPC_MNEMONIC\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bignumber.js": "^4.0.2",
    "callsite": "^1.0.0",
    "glob": "^7.1.2",
    "loader-utils": "^1.1.0",
    "mkdirp": "^0.5.1",
    "solc": "^0.4.13",
    "web3": "^0.20.1"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts",
      "node",
      "sol"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.[tj]s",
      "**/?(*.)(spec|test).[tj]s"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/test/prepare.js",
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/bignumber.js": "^4.0.2",
    "@types/callsite": "^1.0.30",
    "@types/glob": "^5.0.30",
    "@types/jest": "^20.0.5",
    "@types/memory-fs": "^0.3.0",
    "@types/node": "^8.0.17",
    "@types/webpack": "^3.0.5",
    "better-npm-run": "0.0.15",
    "memory-fs": "^0.4.1",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.3",
    "regenerator-runtime": "^0.10.5",
    "ts-jest": "^20.0.7",
    "tslint": "^5.5.0",
    "ethereumjs-testrpc": "^4.0.1",
    "jest": "^20.0.4",
    "jest-jasmine2": "^20.0.4",
    "nodemon": "^1.11.0",
    "typescript": "^2.4.2",
    "async": "^2.5.0"
  }
}
