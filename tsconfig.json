{
  "compilerOptions": {
    "target": "es2017",
    "inlineSources": true,
    "inlineSourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": true,
    // Needed for preventing error TS1202
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017"]
  },
  "include": [
    "./node_modules/web3/index.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/__snapshots__/**/*",
    "./src/**/*.test.ts"
  ]
}
