{
  "compilerOptions": {
    "pretty": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["es6","es7"],
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/__snapshots__/**/*",
    "./src/**/*.test.ts"
  ]
}
